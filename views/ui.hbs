    <script>
      const form = document.getElementById('scrapeForm');
      const status = document.getElementById('status');
      const result = document.getElementById('result');
      const autoBadge = document.getElementById('autoBadge');
      const modeSelect = document.getElementById('modeSelect');
      const blogToggle = document.getElementById('blogOptionsToggle');
      const videoToggle = document.getElementById('videoOptionsToggle');
      const blogSection = document.querySelector('[data-section="blog-options"]');
      const videoSection = document.querySelector('[data-section="video-options"]');
      const viewportPreset = document.getElementById('viewportPreset');
      const waitSelector = document.getElementById('waitSelector');
      const customSelector = document.getElementById('customSelector');
      const urlInput = form.querySelector('input[name="url"]');

      const config = window.__UI_CONFIG__ || { videoHostPattern: '' };
      const videoRegex = new RegExp(config.videoHostPattern, 'i');

      const setStatus = (text, type = 'info') => {
        if (!text) {
          status.innerHTML = '';
          return;
        }
        const pillClass = type === 'success' ? 'pill-success' : type === 'error' ? 'pill-error' : 'pill-info';
        status.innerHTML = `<span class="pill ${pillClass}">${text}</span>`;
      };

      const toggleSection = (checkbox, section) => {
        section.hidden = !checkbox.checked;
      };

      blogToggle.addEventListener('change', () => toggleSection(blogToggle, blogSection));
      videoToggle.addEventListener('change', () => toggleSection(videoToggle, videoSection));

      const syncViewportInputs = () => {
        const option = viewportPreset.selectedOptions[0];
        if (!option) return;
        const widthInput = form.querySelector('input[name="viewportWidth"]');
        const heightInput = form.querySelector('input[name="viewportHeight"]');
        if (option.value === 'custom') {
          widthInput.value = '';
          heightInput.value = '';
          widthInput.readOnly = false;
          heightInput.readOnly = false;
          return;
        }
        const width = option.dataset.width;
        const height = option.dataset.height;
        widthInput.value = width || '';
        heightInput.value = height || '';
        widthInput.readOnly = true;
        heightInput.readOnly = true;
      };
      viewportPreset.addEventListener('change', syncViewportInputs);
      syncViewportInputs();

      waitSelector.addEventListener('change', () => {
        customSelector.hidden = waitSelector.value !== '__custom__';
      });

      const detectMode = (url) => {
        if (!url) {
          autoBadge.textContent = 'ç­‰å¾…è¾“å…¥...';
          return 'blog';
        }
        const isVideo = videoRegex.test(url);
        autoBadge.textContent = isVideo ? 'æ£€æµ‹åˆ°è§†é¢‘é“¾æ¥' : 'æ£€æµ‹åˆ°æ–‡ç« é“¾æ¥';
        autoBadge.className = `pill ${isVideo ? 'pill-success' : 'pill-info'}`;
        return isVideo ? 'video' : 'blog';
      };

      urlInput.addEventListener('input', () => {
        if (modeSelect.value === 'auto') {
          detectMode(urlInput.value.trim());
        }
      });

      form.addEventListener('submit', async (event) => {
        event.preventDefault();
        const formData = new FormData(form);
        const url = urlInput.value.trim();
        if (!url) {
          setStatus('è¯·è¾“å…¥æŠ“å–ç›®æ ‡ URL', 'error');
          return;
        }

        const chosenMode = formData.get('mode') || 'auto';
        const detectedMode = detectMode(url);
        const mode = chosenMode === 'auto' ? detectedMode : chosenMode;

        const blogPayload = { url };
        if (blogToggle.checked) {
          const snapshotName = formData.get('snapshotName');
          if (snapshotName) blogPayload.snapshotName = snapshotName;
          const selectorPreset = formData.get('waitForSelectorPreset');
          if (selectorPreset === '__custom__') {
            const customValue = formData.get('waitForSelectorCustom');
            if (customValue) blogPayload.waitForSelector = customValue;
          } else if (selectorPreset) {
            blogPayload.waitForSelector = selectorPreset;
          }
          if (viewportPreset.value) {
            const width = Number(formData.get('viewportWidth'));
            const height = Number(formData.get('viewportHeight'));
            if (width && height) {
              blogPayload.viewport = { width, height };
            }
          }
        }

        const videoPayload = { url };
        if (videoToggle.checked) {
          const downloader = formData.get('downloader');
          const format = formData.get('format');
          const outputTemplate = formData.get('outputTemplate');
          if (downloader) videoPayload.downloader = downloader;
          if (format) videoPayload.format = format;
          if (outputTemplate) videoPayload.outputTemplate = outputTemplate;
        }

        const endpoint = mode === 'video' ? '/scrape/video' : '/scrape/blog';
        const payload = mode === 'video' ? videoPayload : blogPayload;

        setStatus('ä»»åŠ¡æ‰§è¡Œä¸­...', 'info');
        form.querySelector('button').disabled = true;
        result.textContent = 'ğŸš§ æ­£åœ¨æŠ“å–ï¼Œè¯·ç¨å€™...';

        try {
          const response = await fetch(endpoint, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload),
          });
          const body = await response.json();
          if (!response.ok) {
            throw new Error(body.message || 'æŠ“å–å¤±è´¥');
          }
          setStatus('ä»»åŠ¡å®Œæˆ', 'success');
          result.textContent = JSON.stringify(body, null, 2);
        } catch (error) {
          console.error(error);
          setStatus(error.message || 'è¯·æ±‚å¤±è´¥', 'error');
          result.textContent = error.stack || error.message;
        } finally {
          form.querySelector('button').disabled = false;
          urlInput.value = url;
        }
      });
